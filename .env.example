# Environment Variables for Report Intelligence
# Copy this file to .env and fill in your actual values

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=your-jwt-secret-here

# Admin password for login
ADMIN_PASSWORD=your-admin-password-here

# Database URL (optional - will use in-memory storage if not provided)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/reportintel

# OpenAI API Key for AI analysis (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Server port (default: 3000)
PORT=3000
